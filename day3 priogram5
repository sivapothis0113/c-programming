Product and Mean of the array



#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n;
    scanf("%d",&n);
    
    int a[n];
    float p;
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    
    int x=0,y=1;
    
    for(int i=0;i<n;i++)
    {
        x+=a[i];
        y*=a[i];
    }
    p=(float)x/n;
    p=floor(p*1000)/1000;
    printf("Product of the array:%.2f\n",floor((float)y));
    printf("Mean of the array:%.3f",p);
    return 0;
}
