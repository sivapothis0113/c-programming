Numbers Greater Than Target Value


#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int n;
    scanf("%d",&n);
    
    int a[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    
    int x,b=0,c=0;
    scanf("%d",&x);
    
    for(int i=0;i<n;i++)
    {
        for(int j=i+1;j<n;j++)
        {
            if(a[i]>a[j])
            {
                int t=a[i];
                a[i]=a[j];
                a[j]=t;
            }
        }
    }
    
    printf("The Target values are");
    for(int i=0;i<n;i++)
    {
        if(a[i]>x)
        {
            printf(" %d",a[i]);
            b+=a[i];
            c++;
        }
    }
    printf("\nsum of value is %d",b);
    printf("\nAverage of the value is %.1f",(float)b/c);
    
    return 0;
}
